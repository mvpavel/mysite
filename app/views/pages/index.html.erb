
<h1>Страницы</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>

        <td><%= page.name %></td>
        <td style="width:10px"><%= link_to image_tag("Search_24x24.png"), page %></td>
        <td style="width:10px"><%= link_to image_tag("Edit_24x24.png"), edit_page_path(page) %></td>
        <td style="width:10px"><%= link_to image_tag("Remove_24x24.png"), page, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая страница', new_page_path %>
